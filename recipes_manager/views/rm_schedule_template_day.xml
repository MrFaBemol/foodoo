<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="rm_schedule_template_day_tree" model="ir.ui.view">
            <field name="name">rm.schedule.template.day.tree</field>
            <field name="model">rm.schedule.template.day</field>
            <field name="arch" type="xml">
                <tree editable="bottom" default_order="sequence asc">
                    <field name="sequence" widget="handle"/>
                    <field name="name" />
                    <field name="breakfast_choice" />
                    <field name="lunch_choice" />
                    <field name="dinner_choice" />
                </tree>
            </field>
        </record>

    </data>
</odoo>
